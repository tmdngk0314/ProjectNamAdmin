<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/lockerimg"
        android:background="@drawable/img_locker"
        />

    <TextView
        android:id="@+id/lockertext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/lockerimg"
        android:text="N"
        android:textColor="#000000"
        android:textSize="18dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@+id/lockertext"
        android:text="번 사물함"
        android:textColor="#000000"
        android:textSize="18dp" />


    <TextView
        android:id="@+id/stateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lockertext"
        android:layout_marginLeft="60dp"
        android:layout_marginTop="5dp"
        android:text="예약 상태"
        android:textColor="#000000"
        android:textColorHint="#000000" />

    <TextView
        android:id="@+id/dateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lockertext"
        android:layout_toRightOf="@+id/stateText"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="2021.02.09~2021.02.09"
        android:visibility="invisible"
        android:textColor="#000000"
        android:textColorHint="#000000" />



</RelativeLayout>