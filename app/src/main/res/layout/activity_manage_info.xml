<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="8"
        android:background="#adbede"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/titlelayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:background="#adbede"
            android:layout_weight="4">

            <ImageButton
                android:id="@+id/goSelectAct"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:background="@drawable/left_arrow" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:fontFamily="@font/nanumsquareb"
                android:text="관리자 계정 관리"
                android:textColor="#ffffff"
                android:textSize="20dp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#adbede" >

            <RelativeLayout
                android:layout_width="350dp"
                android:layout_height="100dp"
                android:layout_centerInParent="true">

                <TextView
                    android:id="@+id/textname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="회원"
                    android:textColor="#ffffff"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/text1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:layout_toRightOf="@+id/textname"
                    android:text="님 안녕하세요!"
                    android:textColor="#ffffff"
                    android:textSize="22dp" />

                <TextView
                    android:id="@+id/textEmail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textname"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="15dp"
                    android:text="ssalduk@naver.com"
                    android:textColor="#ffffff"
                    android:textSize="15dp" />

            </RelativeLayout>
        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:background="#efefef">

        <RelativeLayout
            android:id="@+id/ChangePWrela"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/select_box">

            <ImageButton
                android:id="@+id/ChangePWimg"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:background="@drawable/changepassword" />

            <RelativeLayout
                android:id="@+id/ChangePWLinear"
                android:layout_width="160dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@+id/ChangePWimg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/nanumsquareb"
                    android:text="비밀번호 변경"
                    android:textColor="#000000"
                    android:textSize="18sp" />


            </RelativeLayout>

            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@+id/ChangePWLinear"
                android:background="@drawable/right_arrow" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/OTPReissurela"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:layout_below="@id/ChangePWrela"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/select_box">

            <ImageButton
                android:id="@+id/OTPReissuimg"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:background="@drawable/otpreissuimg" />

            <RelativeLayout
                android:id="@+id/rela1"
                android:layout_width="160dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@+id/OTPReissuimg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/nanumsquareb"
                    android:text="OTP 재발급"
                    android:textColor="#000000"
                    android:textSize="18sp" />
            </RelativeLayout>

            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@+id/rela1"
                android:background="@drawable/right_arrow" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/AccountDelrela"
            android:layout_width="300dp"
            android:layout_height="80dp"
            android:layout_below="@id/OTPReissurela"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/select_box">

            <ImageButton
                android:id="@+id/AccountDelimg"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:background="@drawable/accountdelimg" />

            <RelativeLayout
                android:id="@+id/rela2"
                android:layout_width="160dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp"
                android:layout_toEndOf="@+id/AccountDelimg">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/nanumsquareb"
                    android:text="회원탈퇴"
                    android:textColor="#000000"
                    android:textSize="18sp" />
            </RelativeLayout>

            <ImageButton
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@+id/rela2"
                android:background="@drawable/right_arrow" />

        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>